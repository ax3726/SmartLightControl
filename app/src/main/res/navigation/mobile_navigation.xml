<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.regenpod.smartlightcontrol.ui.pulse.PulseFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_pulse" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.regenpod.smartlightcontrol.ui.timer.TimerFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_timer" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.regenpod.smartlightcontrol.ui.dimming.DimmingFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_dimming" />
</navigation>