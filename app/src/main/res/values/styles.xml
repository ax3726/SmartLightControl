<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogBaseStyle" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item><!-- 设置无边框 -->
        <item name="android:windowNoTitle">true</item><!-- 设置无标题 -->
        <item name="android:windowIsFloating">true</item><!-- 设置浮动窗口 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 设置屏幕变暗 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
