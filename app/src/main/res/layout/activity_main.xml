<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg_icon"
    android:orientation="vertical"
    android:paddingTop="35dp">



    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:paddingLeft="20dp">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_device_name"
                android:src="@drawable/logo_icon" />

            <TextView
                android:id="@+id/tv_device_name"
                android:layout_width="78dp"
                android:layout_height="38dp"
                android:layout_toLeftOf="@+id/tv_bluetooth"
                android:text="Device"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="8dp"
                android:textSize="12sp"
                android:background="@drawable/selector_main_menu_bg"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:textColor="@color/colorWhite"
                />


            <TextView
                android:id="@+id/tv_bluetooth"
                android:layout_width="78dp"
                android:layout_height="38dp"
                android:background="@drawable/selector_main_menu_bg"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="Bluetooth"
                android:textSize="12sp"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/img_switch"
                android:textColor="@color/colorWhite" />

            <ImageView
                android:id="@+id/img_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:background="@drawable/selector_on_off"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_second_bg"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingTop="12dp"
            android:paddingRight="23dp"
            android:paddingBottom="12dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hertz"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pulse_logo_icon" />

                    <TextView
                        android:id="@+id/tv_ht_660"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0HZ"
                        android:textColor="@color/colorWhite"
                        android:textSize="22dp"
                        tools:text="2200HZ" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="660nm"
                        android:textColor="@color/color_text"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_ht_less_660"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/less_icon" />

                        <ImageView
                            android:id="@+id/img_ht_add_660"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/add_icon" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pulse_logo_icon" />


                    <TextView
                        android:id="@+id/tv_ht_850"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0HZ"
                        android:textColor="@color/colorWhite"
                        android:textSize="22dp"
                        tools:text="2200HZ" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="850nm"
                        android:textColor="@color/color_text"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_ht_less_850"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/less_icon" />

                        <ImageView
                            android:id="@+id/img_ht_add_850"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/add_icon" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="Duty Cycle   "
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:layout_weight="1">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pulse_logo_icon" />


                    <TextView
                        android:id="@+id/tv_dc_660"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/colorWhite"
                        android:textSize="22dp"
                        tools:text="30%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="660nm series"
                        android:textColor="@color/color_text"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_dc_less_660"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/less_icon" />

                        <ImageView
                            android:id="@+id/img_dc_add_660"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/add_icon" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_round"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingTop="8dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/pulse_logo_icon" />

                    <TextView
                        android:id="@+id/tv_dc_850"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/colorWhite"
                        android:textSize="22dp"
                        tools:text="30%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="850nm series"
                        android:textColor="@color/color_text"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="4dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_dc_less_850"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/less_icon" />

                        <ImageView
                            android:id="@+id/img_dc_add_850"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:src="@drawable/add_icon" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/lly_timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_second_bg"
            android:orientation="vertical"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingBottom="16dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Timer"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_time_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginLeft="20dp"
                    android:text=""
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/shape_round"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/timer_logo_icon" />

                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0mins"
                    android:textColor="@color/colorWhite"
                    android:textSize="22dp"
                    tools:text="12mins" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="4dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_less"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/less_icon" />

                    <ImageView
                        android:id="@+id/img_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:src="@drawable/add_icon" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ok_icon" />

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>